{
  "name": "ux-capture-root",
  "version": "0.0.2",
  "description": "Browser instrumentation helper that makes it easier to capture UX speed metrics",
  "main": "index.js",
  "repository": "git@github.com:meetup/ux-capture.git",
  "author": "Meetup",
  "license": "MIT",
  "private": true,
  "scripts": {
    "version": "lerna version",
    "do-publish": "lerna publish from-git --yes"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "9.0.0",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "flow-bin": "^0.89.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lerna": "^3.8.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "semver": "^5.6.0",
    "uglify-es": "^3.3.9",
    "usertiming": "^0.1.8",
    "webpack": "4.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{test,js}/**/*.js": [
      "prettier --write --single-quote --use-tabs --trailing-comma es5",
      "eslint",
      "git add"
    ]
  }
}
